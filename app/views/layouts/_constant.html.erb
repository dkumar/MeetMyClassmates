<div id='cssmenu'>
<ul>
  <li id="site_title"><b style="line-height: 45px">MeetMyClassmates</b></li>
  <li class='active has-sub' id='setting'><a href='#'><span style="line-height: 20px"><%= current_user.email %></span></a>
    <ul id="drop_down">
      <li class='last topRight' id="create_group"><%= link_to 'Create New Group', new_studygroups_url %></li>
      <li class='last topRight' id="user_page"><%= link_to 'User Page', user_show_path(current_user) %></li>
      <li class='last topRight' id="sign_out"><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
    </ul>
  </li>
</ul>
</div>

<ul id="side_bar">
  <li class="title"><%= link_to 'Home', root_path %></li>

  <br>

  <li class="title">My Study Groups</li>
  <% if current_user.studygroups.empty? %>
    <li class="sub_title">You're not in any study groups.</li>
  <% else %>
    <% current_user.studygroups.each do |studygroup| %>
      <li class="sub_title"><%= link_to studygroup.name, studygroup_show_path(studygroup) %></li>
    <% end %>
  <% end %>

  <br>
  <li class="title">Unscheduled Groups For:</li>
  <% current_user.courses.each do |course| %>
    <%= link_to course.title, unscheduled_view_path(course) %>
  <%end%>

</ul>


