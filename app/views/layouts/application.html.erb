<!DOCTYPE html>
<html>
<head>
  <title>MeetMyClassmates</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <!-- need to be fixed -->
  <% if params[:controller] != 'confirmations'%>
    <%= render :partial => 'layouts/constant' %>
  <% end%>
  <div id="main">
    <%= yield %>
  </div>

</body>
</html>
